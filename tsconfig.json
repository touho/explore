{
    "compilerOptions": {
        // "module": "es2015",
        //"noEmitOnError": false,
        "module": "ES6",

        // noEmit so that "tsc" command could be used just for type checking.
        // Actual build process overrides this
        "noEmit": true,

        "target": "ES5",
        "allowJs": true,
        "outDir": "./testDist/",
        //"strictNullChecks": true
        "lib": ["es7", "dom"],
        "sourceMap": true,
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}
